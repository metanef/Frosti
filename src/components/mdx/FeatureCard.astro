---
import { Image } from "astro:assets";

export interface FeatureCardProps {
  title: string;
  image: string;
  description: string;
  flavor: string;
  color?: string;
}

const {
  title,
  image,
  description,
  flavor,
  color = "oklch(0.6 0.2 250)", // Default blue color
} = Astro.props as FeatureCardProps;

import { Icon } from "astro-icon/components";
---

<div class="card bg-base-100 shadow-md hover:shadow-xl transition-transform duration-300 ease-in-out hover:-translate-y-1 border border-base-200">
  <div class="card-body p-6">
    <div class="grid grid-cols-4 gap-4 flex flex-col items-center text-center sm:items-start sm:text-left">
      <Image
        class="mask col-span-1"
        format="webp"
        width={80}
        height={150}
        src={image}
        alt="Monster"
        loading="eager"
      />
      <div class="col-span-3">
        <h3 class="text-xl font-bold mb-2">{title}</h3>
        <p class="text-base-content/70">{description}</p>
        <div class="flex items-center">
          <Icon name="lucide:droplet" class="w-4 h-4 inline" style={"color:"+color}/>
          <p class="text-base-content/50 inline" style={"color:"+color}>&nbsp; {flavor}</p>
        </div>
      </div>
    </div>
  </div>
</div>
